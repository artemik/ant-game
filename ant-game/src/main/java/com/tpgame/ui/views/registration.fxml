<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<HBox fx:id="rootHbox" alignment="CENTER" style="-fx-border-radius: 10 10 10 10; -fx-background-radius: 10 10 10 10;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane fx:id="gridPane" alignment="CENTER" hgap="10.0" maxHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="210.0" prefWidth="396.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Registration">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets bottom="20.0"/>
                    </GridPane.margin>
                </Text>
                <Label text="Password:" GridPane.rowIndex="2"/>
                <Label text="Password confirmation:" GridPane.rowIndex="3"/>
                <TextField fx:id="loginTextField" promptText="admin" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <PasswordField fx:id="passwordTextField" promptText="12345" GridPane.columnIndex="1"
                               GridPane.rowIndex="2"/>
                <PasswordField fx:id="passwordConfirmTextField" promptText="12345" GridPane.columnIndex="1"
                               GridPane.rowIndex="3"/>
                <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
                      GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" text="BACK"/>
                        <Button fx:id="okButton" mnemonicParsing="false" text="OK"/>
                    </children>
                    <padding>
                        <Insets top="20.0"/>
                    </padding>
                </HBox>
                <Label text="Login:" GridPane.rowIndex="1"/>
            </children>
            <HBox.margin>
                <Insets bottom="50.0" left="15.0" right="15.0" top="50.0"/>
            </HBox.margin>
        </GridPane>
    </children>
</HBox>
