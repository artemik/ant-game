<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="borderPane" prefHeight="336.0" prefWidth="530.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <Pane>
            <children>
                <GridPane hgap="10.0" layoutX="11.0" layoutY="13.0" prefHeight="298.0" prefWidth="494.0" vgap="10.0"
                          BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0"
                                           prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Title:"/>
                        <Label text="Level:" GridPane.rowIndex="1"/>
                        <Label text="Text:" GridPane.rowIndex="2"/>
                        <TextField fx:id="titleTextField" promptText="Problem title" GridPane.columnIndex="1"/>
                        <TextArea fx:id="textTextArea" prefHeight="200.0" prefWidth="200.0" promptText="Problem text"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="levelComboBox" prefHeight="25.0" prefWidth="59.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                        <HBox alignment="CENTER_RIGHT" prefHeight="66.0" prefWidth="370.0" GridPane.columnIndex="1"
                              GridPane.rowIndex="3">
                            <children>
                                <Button fx:id="cancelBtn" mnemonicParsing="false" text="CANCEL">
                                    <HBox.margin>
                                        <Insets right="10.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="okBtn" mnemonicParsing="false" text="OK"/>
                            </children>
                        </HBox>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </GridPane>
            </children>
        </Pane>
    </center>
</BorderPane>
